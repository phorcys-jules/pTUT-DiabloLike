{
    "compilerOptions": {
      "resolveJsonModule": true,
      "module": "commonjs",
      "target": "ES2021",
      "strict": true,
      "outDir": "./js",
      "declaration": true,
      "declarationDir": "./types",
      "importHelpers": true,
      "esModuleInterop": true,
      "noEmitOnError": true,
      "strictPropertyInitialization": false,
      "lib": [
        "ES2021",
        "esnext.asynciterable",
        "dom"
      ],
      "moduleResolution": "node"
    },
    "include": [
        "./ts/*.ts",
        "./ts/*/*.ts",
        "./ts/*/*/*.ts"],
}


