    "compilerOptions": {
        "outDir": "./js/",
        "target": "ES6",
        "noEmitOnError": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./types",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./ts/*.ts",
        "./ts/models/*.ts",
        "./ts/routes/*.ts"
    ],
}