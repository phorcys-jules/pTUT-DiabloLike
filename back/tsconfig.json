{
    "compilerOptions": {
        "outDir": "./js/",
        "lib": ["es5", "es6"],
        "target": "es6",
        //"module": "commonjs",
        "noEmitOnError": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./types",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "./ts/*.ts",
        "./ts/database/*/*.ts",
        "./ts/database/*.ts"],
}